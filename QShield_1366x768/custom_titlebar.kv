<CustomTitleBar@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, 0.05
    pos_hint: {"left": 100, "top": 1}
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.7
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: title_label
        text: "Pandora QShield"
        font_size: 20
        color: (1, 1, 1, 1)
        size_hint_x: 1
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        padding: dp(45), 0




# Minimize button
    Button:
        text: '_'
        size_hint_x: None
        color: (1, 1, 1, 1)
        background_color: (0, 0.502, 0.443, 1)
        width: dp(60)
        on_release: app.minimize_window()
        on_press:
            self.background_color = (0, 0.788, 0.702, 1)
        on_release:
            self.background_color = (0, 0.502, 0.443, 1)

# Close button
    Button:
        text: 'X'
        size_hint_x: None
        color: (1, 1, 1, 1)
        background_color: (0.929, 0.051, 0.051, 1)
        width: dp(60)
        on_release: app.stop()
        on_press:
            self.background_color = (1, 0, 0, 1)
        on_release:
            self.background_color = (0.929, 0.051, 0.051, 1)

